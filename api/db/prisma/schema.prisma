model User {
  id             Int             @id @default(autoincrement())
  code           String          @unique @db.VarChar(255)
  email          String          @unique @db.VarChar(255)
  name           String
  authentication Authentication?
  sellers        Seller[]
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
}

model Authentication {
  id             Int      @id @default(autoincrement())
  passwordDigest String   @map("password_digest") @db.Char(64)
  user           User     @relation(fields: [userId], references: [id])
  userId         Int      @unique @map("user_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
}

model Shop {
  id        Int      @id @default(autoincrement())
  name      String
  merchs    Merch[]
  sellers   Seller[]
  sales     Sale[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Seller {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  shopId    Int      @map("shop_id")
  role      Role     @default(USER)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, shopId])
}

model Merch {
  id             Int          @id @default(autoincrement())
  name           String
  description    String
  price          Int // 税抜価格
  image          String
  isPinning      Boolean      @default(false)
  shopId         Int          @map("shop_id")
  salesTaxRateId Int
  categories     Category[]
  shop           Shop         @relation(fields: [shopId], references: [id], onDelete: Cascade)
  salesTaxRate   SalesTaxRate @relation(fields: [salesTaxRateId], references: [id])
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  deletedAt      DateTime?    @map("deleted_at")
}

model Category {
  id         Int          @id @default(autoincrement())
  category   String       @default("__default")
  stock      Stock[]
  merchId    Int          @map("merch_id")
  merch      Merch        @relation(fields: [merchId], references: [id], onDelete: Cascade)
  SaleDetail SaleDetail[]
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  deletedAt  DateTime?    @map("deleted_at")
}

model Stock {
  id         Int       @id @default(autoincrement())
  quantity   Int
  type       StockType
  categoryId Int       @map("category_id")
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
}

model Sale {
  id          Int          @id @default(autoincrement())
  note        String
  soldAt      DateTime     @default(now()) @map("sold_at")
  shopId      Int          @map("shop_id")
  SaleDetails SaleDetail[]
  shop        Shop         @relation(fields: [shopId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
}

model SaleDetail {
  id         Int      @id @default(autoincrement())
  price      Int // 税込価格
  soldPrice  Int      @map("sold_price") // 実際に売った時の価格
  quantity   Int
  categoryId Int      @map("category_id")
  saleId     Int      @map("sale_id")
  category   Category @relation(fields: [categoryId], references: [id])
  sale       Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
}

model SalesTaxRate {
  id               Int              @id @default(autoincrement())
  rate             Decimal
  salesTaxCategory SalesTaxCategory
  from             DateTime
  to               DateTime
  Merch            Merch[]
}

enum Role {
  USER
  OWNER
}

enum StockType {
  SELL
  GIVE
  STOCK_UP
  LOST
}

enum SalesTaxCategory {
  REGULAR // 通常税率
  REDUCED // 軽減税率
  FREE // 非課税
}
